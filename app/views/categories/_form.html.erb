<%= render 'shared/errors', obj: @category %>

<div class="row">
  <div class="col-sm-12 flex-center-1">
    <%= form_for(@category, html: { class: 'center-block col-sm-8 col-xs-12 well form-horizontal', role: 'form' }) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-9">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Category name', autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-9">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <div class="col-sm-offset-2 col-sm-9" style="padding-left:0px;">
      <%= link_to 'Cancel request and return to articles listing', articles_path %>
    </div>
  </div>
</div>
